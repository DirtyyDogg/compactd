{
  "name": "compactd",
  "version": "2.0.0",
  "description": "Self-hosted music player",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -t codeFrame 'server/**/*.ts'",
    "build": "npm run build:shared && npm run build:server",
    "build:server": "tsc -p ./server",
    "build:shared": "tsc -p ./shared",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prebuild:server": "rimraf server/dist",
    "prebuild:shared": "rimraf --glob shared/**/*.js{,.map}",
    "precommit": "lint-staged",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@modules": "./server/dist/modules",
    "@controllers": "./server/dist/controllers",
    "@utils": "./server/dist/utils",
    "@helpers": "./server/dist/helpers",
    "@services": "./server/dist/services",
    "@middlewares": "./server/dist/middlewares"
  },
  "lint-staged": {
    "{server,client}/**/*.ts": [
      "prettier --write --single-quote",
      "tslint -t codeFrame",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./server/tests/tsconfig.json",
        "skipBabel": true
      }
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleNameMapper": {
      "^@modules/(.+)": "<rootDir>/server/src/modules/$1",
      "^@controllers/(.+)": "<rootDir>/server/src/controllers/$1",
      "^@utils/(.+)": "<rootDir>/server/src/utils/$1",
      "^@helpers/(.+)": "<rootDir>/server/src/helpers/$1",
      "^@services/(.+)": "<rootDir>/server/src/services/$1",
      "^@middlewares/(.+)": "<rootDir>/server/src/middlewares/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compactd/compactd.git"
  },
  "keywords": [
    "music-player",
    "player"
  ],
  "author": "vinz243",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compactd/compactd/issues"
  },
  "homepage": "https://github.com/compactd/compactd#readme",
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "credential": "^2.0.0",
    "debug": "^3.1.0",
    "delay": "^2.0.0",
    "express": "^4.16.3",
    "fluent-ffmpeg": "^2.1.2",
    "http-errors": "^1.6.3",
    "id3-parser": "^2.0.0",
    "jsonwebtoken": "^8.2.1",
    "mime-types": "^2.1.18",
    "module-alias": "^2.0.6",
    "mz": "^2.7.0",
    "pouchdb": "^6.4.3",
    "reflect-metadata": "^0.1.10",
    "shared": "file:shared",
    "slothdb": "^2.1.1",
    "uuid": "^3.2.1",
    "walk": "^2.3.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/credential": "0.0.32",
    "@types/debug": "0.0.30",
    "@types/delay": "^2.0.1",
    "@types/express": "^4.11.1",
    "@types/fluent-ffmpeg": "^2.1.6",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.2.2",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mime-types": "^2.1.0",
    "@types/mz": "0.0.32",
    "@types/node": "^9.6.2",
    "@types/pouchdb": "^6.3.2",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "pouchdb-adapter-memory": "^6.4.3",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  }
}
