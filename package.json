{
  "name": "compactd",
  "version": "2.0.0",
  "description": "Self-hosted music player",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -t codeFrame 'server/**/*.ts'",
    "build": "tsc -p ./server",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prebuild": "rimraf server/dist",
    "precommit": "lint-staged",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@modules": "./server/dist/modules",
    "@controllers": "./server/dist/controllers",
    "@models": "./server/dist/models",
    "@utils": "./server/dist/utils",
    "@helpers": "./server/dist/helpers",
    "@services": "./server/dist/services"
  },
  "lint-staged": {
    "{server,client}/**/*.ts": [
      "prettier --write --single-quote",
      "tslint -t codeFrame",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./server/tests/tsconfig.json"
      }
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleNameMapper": {
      "^@modules/(.+)": "<rootDir>/server/src/modules/$1",
      "^@controllers/(.+)": "<rootDir>/server/src/controllers/$1",
      "^@models/(.+)": "<rootDir>/server/src/models/$1",
      "^@utils/(.+)": "<rootDir>/server/src/utils/$1",
      "^@helpers/(.+)": "<rootDir>/server/src/helpers/$1",
      "^@services/(.+)": "<rootDir>/server/src/services/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compactd/compactd.git"
  },
  "keywords": [
    "music-player",
    "player"
  ],
  "author": "vinz243",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compactd/compactd/issues"
  },
  "homepage": "https://github.com/compactd/compactd#readme",
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "express": "^4.16.3",
    "module-alias": "^2.0.6",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  }
}
