{
  "name": "compactd",
  "version": "2.0.0",
  "description": "Self-hosted music player",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -t codeFrame 'server/**/*.ts'",
    "build": "npm run build:shared && npm run build:server",
    "build:server": "tsc -p ./server",
    "build:shared": "tsc -p ./shared",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prebuild:server": "rimraf server/dist",
    "prebuild:shared": "rimraf --glob shared/**/*.js{,.map}",
    "precommit": "lint-staged",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "start:server": "npm run build && node server/dist/dev",
    "start:client":
      "webpack-dev-server -p --config client/webpack.config.js --mode development --hot --progress --color --port 3000 --open",
    "build:client":
      "webpack -p --config client/webpack.config.js --progress --colors"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@modules": "./server/dist/modules",
    "@controllers": "./server/dist/controllers",
    "@utils": "./server/dist/utils",
    "@helpers": "./server/dist/helpers",
    "@services": "./server/dist/services",
    "@middlewares": "./server/dist/middlewares"
  },
  "lint-staged": {
    "{server,client}/**/*.ts": [
      "prettier --write --single-quote",
      "tslint -t codeFrame",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./server/tests/tsconfig.json",
        "skipBabel": true
      }
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/test/"],
    "moduleNameMapper": {
      "^@modules/(.+)": "<rootDir>/server/src/modules/$1",
      "^@controllers/(.+)": "<rootDir>/server/src/controllers/$1",
      "^@utils/(.+)": "<rootDir>/server/src/utils/$1",
      "^@helpers/(.+)": "<rootDir>/server/src/helpers/$1",
      "^@services/(.+)": "<rootDir>/server/src/services/$1",
      "^@middlewares/(.+)": "<rootDir>/server/src/middlewares/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compactd/compactd.git"
  },
  "keywords": ["music-player", "player"],
  "author": "vinz243",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compactd/compactd/issues"
  },
  "homepage": "https://github.com/compactd/compactd#readme",
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "credential": "^2.0.0",
    "debug": "^3.1.0",
    "delay": "^2.0.0",
    "express": "^4.16.3",
    "fluent-ffmpeg": "^2.1.2",
    "http-errors": "^1.6.3",
    "id3-parser": "^2.0.0",
    "jsonwebtoken": "^8.2.1",
    "mime-types": "^2.1.18",
    "module-alias": "^2.0.6",
    "mz": "^2.7.0",
    "pouchdb": "^6.4.3",
    "reflect-metadata": "^0.1.10",
    "shared": "file:shared",
    "slothdb": "^2.1.1",
    "url-join": "^4.0.0",
    "uuid": "^3.2.1",
    "walk": "^2.3.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/classnames": "2.2.3",
    "@types/credential": "0.0.32",
    "@types/debug": "0.0.30",
    "@types/delay": "^2.0.1",
    "@types/express": "^4.11.1",
    "@types/fluent-ffmpeg": "^2.1.6",
    "@types/history": "4.6.2",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.2.2",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mime-types": "^2.1.0",
    "@types/mz": "0.0.32",
    "@types/node": "^8.0.0",
    "@types/path-to-regexp": "^1.7.0",
    "@types/pouchdb": "^6.3.2",
    "@types/radium": "^0.24.0",
    "@types/react": "16.3.13",
    "@types/react-dom": "16.0.5",
    "@types/react-redux": "5.0.18",
    "@types/react-router": "4.0.24",
    "@types/react-router-redux": "^5.0.13",
    "@types/redux-actions": "2.2.4",
    "@types/redux-thunk": "^2.1.0",
    "@types/supertest": "^2.0.4",
    "@types/url-join": "^0.8.2",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^4.1.4",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-env": "1.13.6",
    "@types/webpack-hot-middleware": "^2.16.3",
    "babel-loader": "^7.1.4",
    "classnames": "^2.2.5",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^1.0.0-alpha.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "ladda": "^1.0.6",
    "lint-staged": "^7.0.4",
    "path-to-regexp": "^2.2.1",
    "postcss": "^6.0.21",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.4",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.3.2",
    "pouchdb-adapter-memory": "^6.4.3",
    "prettier": "^1.11.1",
    "radium": "^0.24.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-feather": "^1.1.0",
    "react-hot-loader": "^4.1.2",
    "react-progressbar.js": "^0.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "redux-actions": "^2.3.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "styled-components": "^3.2.6",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1",
    "wretch": "^1.1.2"
  }
}
