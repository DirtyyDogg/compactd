{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "baseUrl": "./src/",
    "experimentalDecorators": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules/@types/",
      "../types/",
      "../../types/",
      "types/"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": ["./types/"]
}
