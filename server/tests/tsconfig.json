{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es7"],
    "sourceMap": true,
    "rootDir": "../",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "../src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@controllers/*": ["./controllers/*"],
      "@utils/*": ["./utils/*"],
      "@helpers/*": ["./helpers/*"],
      "@constants/*": ["./constants/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@services/*": ["./services/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./"]
}
