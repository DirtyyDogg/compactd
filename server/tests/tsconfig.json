{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7"],
    "sourceMap": true, 
    "rootDir": "../", 
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "../src", 
    "paths": {
      "@modules/*": ["./modules/*"],
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"],
      "@helpers/*": ["./helpers/*"],
      "@services/*": ["./services/*"]
    }, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./"
  ]
}